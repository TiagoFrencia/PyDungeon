@REM ----------------------------------------------------------------------------
@REM Apache Maven Wrapper startup batch script, version 3.3.2
@REM
@REM Optional ENV vars
@REM   MVNW_REPOURL - repo url base for downloading maven distribution
@REM   MVNW_USERNAME/MVNW_PASSWORD - user and password for downloading maven
@REM   MVNW_VERBOSE - true: enable verbose log; others: silence the download process
@REM ----------------------------------------------------------------------------

@IF "%__MVNW_ARG0_NAME__%"=="" (SET __MVNW_ARG0_NAME__=%~nx0)
@SET __MVNW_CMD__=
@SET __MVNW_ERROR__=
@SET __MVNW_PSMODULEP_SAVE=%PSModulePath%
@SET PSModulePath=
@FOR /F "usebackq tokens=1* delims==" %%A IN ("%~dp0.mvn\wrapper\maven-wrapper.properties") DO @IF "%%A"=="wrapperUrl" SET __MVNW_WRAPPER_URL__=%%B
@IF NOT "%__MVNW_WRAPPER_URL__%"=="" GOTO :wrapperUrlFound
@SET __MVNW_WRAPPER_URL__=https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar
:wrapperUrlFound
@IF "%__MVNW_WRAPPER_URL__%"=="" (
    @ECHO [ERROR] Wrapper URL not found in maven-wrapper.properties
    @SET __MVNW_ERROR__=1
    @GOTO :end
)
@SET __MVNW_WRAPPER_JAR__=%~dp0.mvn\wrapper\maven-wrapper.jar
@SET __MVNW_WRAPPER_LAUNCHER__=%~dp0.mvn\wrapper\maven-wrapper-launcher.jar

@IF EXIST "%__MVNW_WRAPPER_JAR__%" (
    @SET __MVNW_CMD__="%JAVA_HOME%\bin\java.exe" -jar "%__MVNW_WRAPPER_JAR__%" %*
    @GOTO :run
)

@IF EXIST "%__MVNW_WRAPPER_LAUNCHER__%" (
    @SET __MVNW_CMD__="%JAVA_HOME%\bin\java.exe" -jar "%__MVNW_WRAPPER_LAUNCHER__%" %*
    @GOTO :run
)

@ECHO [INFO] Downloading maven-wrapper.jar from %__MVNW_WRAPPER_URL__%
@IF "%MVNW_VERBOSE%"=="true" (
    @POWERSHELL -Command "&{[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; Invoke-WebRequest -Uri '%__MVNW_WRAPPER_URL__%' -OutFile '%__MVNW_WRAPPER_JAR__%'}"
) ELSE (
    @POWERSHELL -Command "&{[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; Invoke-WebRequest -Uri '%__MVNW_WRAPPER_URL__%' -OutFile '%__MVNW_WRAPPER_JAR__%' -UseBasicParsing}"
)

@IF EXIST "%__MVNW_WRAPPER_JAR__%" (
    @SET __MVNW_CMD__="%JAVA_HOME%\bin\java.exe" -jar "%__MVNW_WRAPPER_JAR__%" %*
    @GOTO :run
) ELSE (
    @ECHO [ERROR] Failed to download maven-wrapper.jar
    @SET __MVNW_ERROR__=1
    @GOTO :end
)

:run
@%__MVNW_CMD__%

:end
@SET PSModulePath=%__MVNW_PSMODULEP_SAVE%
@EXIT /B %__MVNW_ERROR__%
